# NeuroQuant Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=./database/neuroquant.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=4

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000,http://localhost:5500,http://127.0.0.1:5500
CORS_ALLOW_CREDENTIALS=true

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_ENABLED=false

# Model Configuration
MODEL_SAVE_DIR=./models
MODEL_CHECKPOINT_DIR=./checkpoints
MODEL_AUTO_SAVE=true
MODEL_SAVE_INTERVAL=1000

# Training Configuration
DEFAULT_TIMESTEPS=50000
DEFAULT_TRAIN_SPLIT=0.7
MAX_EPISODE_STEPS=1000

# RL Hyperparameters
LEARNING_RATE=0.0003
GAMMA=0.99
EPSILON_START=1.0
EPSILON_END=0.01
EPSILON_DECAY=0.995
BATCH_SIZE=64
MEMORY_SIZE=100000
TARGET_UPDATE_FREQ=10

# Financial Configuration
INITIAL_PORTFOLIO=10000
TRANSACTION_COST=0.001
SLIPPAGE=0.0005
MAX_POSITION_SIZE=1.0

# Market Data Configuration
YFINANCE_TIMEOUT=30
YFINANCE_MAX_RETRIES=3
DATA_CACHE_ENABLED=true
DATA_CACHE_TTL=3600

# Sentiment Analysis
SENTIMENT_MODEL=ProsusAI/finbert
SENTIMENT_ENABLED=true
SENTIMENT_CACHE_ENABLED=true
NEWS_API_KEY=
FINNHUB_API_KEY=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/neuroquant.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security
SECRET_KEY=your-secret-key-change-this-in-production
API_KEY_ENABLED=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Development
DEBUG=false
ENVIRONMENT=development
