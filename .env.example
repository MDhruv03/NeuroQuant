# ==========================================
# NeuroQuant Environment Variables
# ==========================================
# Copy this file to .env and configure for your environment
# For local: Use SQLite, for production: Use PostgreSQL

# ==========================================
# ENVIRONMENT
# ==========================================
ENVIRONMENT=development  # development, staging, production
DEBUG=false

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# For local development with SQLite:
DATABASE_URL=./database/neuroquant.db

# For production with PostgreSQL (Render auto-provides this):
# DATABASE_URL=postgresql://user:password@host:port/database
# Note: Render will automatically set DATABASE_URL for PostgreSQL

DATABASE_TYPE=sqlite  # sqlite or postgresql
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=3600  # seconds

# PostgreSQL specific (only if using PostgreSQL)
POSTGRES_USER=neuroquant
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=neuroquant_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ==========================================
# API SERVER
# ==========================================
API_HOST=0.0.0.0  # Use 0.0.0.0 for Render deployment
API_PORT=8000
API_RELOAD=false  # Set to true only in development
API_WORKERS=4  # Number of worker processes (adjust based on CPU cores)

# ==========================================
# CORS (Cross-Origin Resource Sharing)
# ==========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000,http://localhost:5500,http://127.0.0.1:5500
CORS_ALLOW_CREDENTIALS=true

# ==========================================
# REDIS CACHE (Optional)
# ==========================================
REDIS_ENABLED=false  # Enable if using Redis for caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# For Render Redis: REDIS_URL will be auto-provided

# ==========================================
# SECURITY
# ==========================================
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY_ENABLED=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ==========================================
# MARKET DATA
# ==========================================
YFINANCE_TIMEOUT=30
YFINANCE_MAX_RETRIES=3
DATA_CACHE_ENABLED=true
DATA_CACHE_TTL=3600  # seconds

# ==========================================
# FINANCIAL CONFIGURATION
# ==========================================
INITIAL_PORTFOLIO=100000
TRANSACTION_COST=0.001  # 0.1%
SLIPPAGE=0.0005  # 0.05%
MAX_POSITION_SIZE=1.0

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/neuroquant.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ==========================================
# EXTERNAL API KEYS (Optional)
# ==========================================
# For sentiment analysis and advanced features
NEWS_API_KEY=
FINNHUB_API_KEY=
ALPHA_VANTAGE_API_KEY=

# ==========================================
# SENTIMENT ANALYSIS (Optional)
# ==========================================
SENTIMENT_ENABLED=false
SENTIMENT_MODEL=ProsusAI/finbert
SENTIMENT_CACHE_ENABLED=true

# ==========================================
# MODEL TRAINING (if using ML features)
# ==========================================
MODEL_SAVE_DIR=./models
MODEL_CHECKPOINT_DIR=./checkpoints
MODEL_AUTO_SAVE=true
MODEL_SAVE_INTERVAL=1000
DEFAULT_TIMESTEPS=50000
DEFAULT_TRAIN_SPLIT=0.7
MAX_EPISODE_STEPS=1000

# ==========================================
# RL HYPERPARAMETERS (if using RL features)
# ==========================================
LEARNING_RATE=0.0003
GAMMA=0.99
EPSILON_START=1.0
EPSILON_END=0.01
EPSILON_DECAY=0.995
BATCH_SIZE=64
MEMORY_SIZE=100000
TARGET_UPDATE_FREQ=10

# ==========================================
# RENDER SPECIFIC (Auto-provided by Render)
# ==========================================
# These are automatically set by Render, no need to manually configure:
# - DATABASE_URL (for PostgreSQL)
# - REDIS_URL (if using Redis add-on)
# - PORT (Render assigns this automatically)
# - PYTHON_VERSION (set in render.yaml)
